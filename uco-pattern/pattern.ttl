# baseURI: https://unifiedcyberontology.org/ontology/uco/pattern
# imports: https://unifiedcyberontology.org/ontology/uco/core

@base <https://unifiedcyberontology.org/ontology/uco/pattern> .
@prefix xml: <http://www.w3.org/XML/1998/namespace>.
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix xsd: <http://www.w3.org/2001/XMLSchema#>.
@prefix sh: <http://www.w3.org/ns/shacl#>.
@prefix action: <https://unifiedcyberontology.org/ontology/uco/action#>.
@prefix core: <https://unifiedcyberontology.org/ontology/uco/core#>.
@prefix types: <https://unifiedcyberontology.org/ontology/uco/types#>.
@prefix marking: <https://unifiedcyberontology.org/ontology/uco/marking#>.
@prefix identity: <https://unifiedcyberontology.org/ontology/uco/identity#>.
@prefix location: <https://unifiedcyberontology.org/ontology/uco/location#>.
@prefix pattern: <https://unifiedcyberontology.org/ontology/uco/pattern#>.
@prefix role: <https://unifiedcyberontology.org/ontology/uco/role#>.
@prefix owl: <http://www.w3.org/2002/07/owl#>.
@prefix xs: <http://www.w3.org/2001/XMLSchema#>.


<https://unifiedcyberontology.org/ontology/uco/pattern> a owl:Ontology ;
    rdfs:label "uco-pattern"@en ;
    owl:imports <https://unifiedcyberontology.org/ontology/uco/core> .

pattern:LogicalPattern a owl:Class,
        sh:NodeShape ;
	#from core:UcoObject
    sh:property [
        sh:path core:objectMarking
    ] ;
    sh:property [
        sh:path core:type
    ] ;
    sh:property [
        sh:path core:objectCreatedTime ;
        sh:datatype xsd:dateTime ;
        sh:maxCount "1"^^xsd:nonNegativeInteger
    ] ;
    sh:property [
        sh:path core:id ;
        sh:class types:Identifier ;
        sh:maxCount "1"^^xsd:nonNegativeInteger
    ] ;
    sh:property [
        sh:path core:specVersion ;
        sh:datatype xsd:string ;
        sh:maxCount "1"^^xsd:nonNegativeInteger
    ] ;
    sh:property [
        sh:path core:externalReference ;
        sh:class core:ExternalReference ;
        sh:minCount "0"^^xsd:nonNegativeInteger
    ] ;
    sh:property [
        sh:path core:description
    ] ;
    sh:property [
        sh:path core:hasFacet
    ] ;
    sh:property [
        sh:path core:tag
    ] ;
    sh:property [
        sh:path core:createdBy ;
        sh:class core:IdentityAbstraction ;
        sh:maxCount "1"^^xsd:nonNegativeInteger
    ] ;
    sh:property [
        sh:path core:modifiedTime
    ] ;
    sh:property [
        sh:path core:name ;
        sh:datatype xsd:string ;
        sh:maxCount "1"^^xsd:nonNegativeInteger
    ] ;

	#from pattern:Pattern
    rdfs:label "LogicalPattern"@en ;
    rdfs:comment "A logical pattern is a grouping of characteristics unique to an informational pattern expressed via a structured pattern expression following the rules of logic."@en ;
    rdfs:subClassOf pattern:Pattern ;
    sh:property [ sh:class pattern:PatternExpression ;
            sh:maxCount "1"^^xs:nonNegativeInteger ;
            sh:path pattern:patternExpression ] ;
    sh:targetClass pattern:LogicalPattern .

pattern:patternExpression a owl:DatatypeProperty ;
    rdfs:label "patternExpression"@en ;
    rdfs:comment "An explicit logical pattern expression."@en ;
    rdfs:range pattern:PatternExpression .

pattern:Pattern a owl:Class,
        sh:NodeShape ;
	#from core:UcoObject
    sh:property [
        sh:path core:objectMarking
    ] ;
    sh:property [
        sh:path core:type
    ] ;
    sh:property [
        sh:path core:objectCreatedTime ;
        sh:datatype xsd:dateTime ;
        sh:maxCount "1"^^xsd:nonNegativeInteger
    ] ;
    sh:property [
        sh:path core:id ;
        sh:class types:Identifier ;
        sh:maxCount "1"^^xsd:nonNegativeInteger
    ] ;
    sh:property [
        sh:path core:specVersion ;
        sh:datatype xsd:string ;
        sh:maxCount "1"^^xsd:nonNegativeInteger
    ] ;
    sh:property [
        sh:path core:externalReference ;
        sh:class core:ExternalReference ;
        sh:minCount "0"^^xsd:nonNegativeInteger
    ] ;
    sh:property [
        sh:path core:description
    ] ;
    sh:property [
        sh:path core:hasFacet
    ] ;
    sh:property [
        sh:path core:tag
    ] ;
    sh:property [
        sh:path core:createdBy ;
        sh:class core:IdentityAbstraction ;
        sh:maxCount "1"^^xsd:nonNegativeInteger
    ] ;
    sh:property [
        sh:path core:modifiedTime
    ] ;
    sh:property [
        sh:path core:name ;
        sh:datatype xsd:string ;
        sh:maxCount "1"^^xsd:nonNegativeInteger
    ] ;

    rdfs:label "Pattern"@en ;
    rdfs:comment "A pattern is a combination of properties, acts, tendencies, etc., forming a consistent or characteristic arrangement."@en ;
    rdfs:subClassOf core:UcoObject ;
    sh:targetClass pattern:Pattern .

pattern:PatternExpression a owl:Class,
        sh:NodeShape ;
    rdfs:label "PatternExpression"@en ;
    rdfs:comment "A pattern expression is a grouping of characteristics unique to an explicit logical expression defining a pattern (e.g., regular expression, SQL Select expression, etc.)."@en ;
    sh:targetClass pattern:PatternExpression .



